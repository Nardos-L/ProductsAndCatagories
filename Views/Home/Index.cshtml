@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="text-center mt-3">
    <a class="h4" asp-controller="Home" asp-action="Index">Products</a> |
    <a class="h4" asp-controller="Home" asp-action="Categories">Categories</a>
</div>

<div class="container-products">
    <div class="right">
        <h6 class="mb-3">New Product</h6>
        <form asp-controller="Home" asp-action="CreateProduct" method="POST">
            <div class="mb-3">
                <span class="form-label text-danger font-weight-bold" asp-validation-for="Name"></span>
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
            </div>
            <div class="mb-3">
                <span class="form-label text-danger font-weight-bold" asp-validation-for="Description"></span>
                <label class="form-label" asp-for="Description"></label>
                <input class="form-control" asp-for="Description">
            </div>
            <div class="mb-3">
                <span class="form-label text-danger font-weight-bold" asp-validation-for="Price"></span>
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price">
            </div>
            <button class="btn btn-outline-success">Create</button>
        </form>
    </div>
    <div class="left">
        <h6 class="mb-3 mx-4">Existing Products</h6>
        @{
            foreach(var product in ViewBag.allProducts)
            {
                <ul>
                    <a asp-controller="Home" asp-action="Details" asp-route-productId="@product.ProductId">@product.Name</a>
                </ul>
                
            }
        }
        
    </div>
</div>
